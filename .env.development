# Development Environment Configuration
# This file is used for local development with mock API server

# Mock Azure Updates API endpoint (used by tests/mock-api/server.ts)
AZURE_UPDATES_API_ENDPOINT=http://localhost:3001/api/v2/azure

# Mock API server port
MOCK_API_PORT=3001

# Disable automatic sync on startup for development
SYNC_ON_STARTUP=false

# Database path (use :memory: for in-memory database during development)
DATABASE_PATH=:memory:

# Log level (debug, info, warn, error)
LOG_LEVEL=debug
